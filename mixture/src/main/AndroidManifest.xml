<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mixture">

    <!-- 读取手机设置 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 查看网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- WLAN -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- SD卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 蓝牙 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!-- 仅在支持BLE（即蓝牙4.0）的设备上运行 -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <!-- 如果Android6.0 蓝牙搜索不到设备，需要补充下面两个权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AssetsTextActivity" />
        <activity android:name=".activity.AssetsImageActivity" />
        <activity android:name=".activity.WebLocalActivity" />
        <activity android:name=".activity.WebSpanActivity" />
        <activity android:name=".activity.WebBrowserActivity" />
        <activity android:name=".activity.WebScriptActivity" />
        <activity android:name=".activity.JniCpuActivity" />
        <activity android:name=".activity.JniSecretActivity" />
        <activity android:name=".activity.WifiInfoActivity" />
        <activity android:name=".activity.WifiConnectActivity" />
        <activity android:name=".activity.WifiList2Activity" />
        <activity android:name=".activity.WifiApActivity" />
        <activity android:name=".activity.BluetoothTransActivity" />
        <activity android:name=".activity.NetbiosActivity" />
        <activity android:name=".activity.WifiShareActivity" />
        <activity
            android:name=".activity.PdfRenderActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:screenOrientation="sensor"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".activity.PdfSliderActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:screenOrientation="sensor"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".activity.PdfTurnActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:screenOrientation="sensor"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".activity.EbookReaderActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:screenOrientation="sensor"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".activity.EpubActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:screenOrientation="sensor"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".activity.VudroidActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:screenOrientation="sensor"
            android:theme="@style/AppCompatTheme" />

        <service
            android:name=".service.ImportDeviceService"
            android:enabled="true" />
        <service
            android:name=".service.CopyFileService"
            android:enabled="true" />

    </application>

</manifest>