<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1000"
    android:fillAfter="false"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:repeatCount="infinite"
    android:repeatMode="restart"
    android:toDegrees="720">
    <!--android:toDegrees="360">决定了旋转的速度-->
    <!--以下4个属性只有当类型为环形时才有效-->
    <!--android:innerRadius="dimension"     //内环半径-->
    <!--android:innerRadiusRatio="float"    //内环半径相对于环的宽度的比例-->
    <!--android:thickness="dimension"       //环的厚度-->
    <!--android:thicknessRatio="float"      //环的厚度相对于环的宽度的比例-->
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="10"
        android:useLevel="false">
        <gradient
            android:centerColor="#FFDC35"
            android:centerX="0.50"
            android:centerY="0.50"
            android:endColor="#FF0000"
            android:startColor="#00FFFFFF"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>