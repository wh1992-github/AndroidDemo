<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <ImageView
            android:layout_width="571px"
            android:layout_height="300px"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_default" />

        <!--有毛边，scaleType属性生效-->
        <com.example.custom.widget.RoundImageView1
            android:id="@+id/round_iv1"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default" />

        <!--没有毛边，但是图片被裁减了，scaleType属性失效-->
        <com.example.custom.widget.RoundImageView2
            android:id="@+id/round_iv2"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default" />

        <!--没有毛边，但是图片被裁减了，scaleType属性失效-->
        <com.example.custom.widget.RoundImageView3
            android:id="@+id/round_iv3"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default" />

        <ImageView
            android:id="@+id/circle_iv"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/round_rect_iv"
            android:layout_width="571px"
            android:layout_height="300px"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop" />

    </LinearLayout>
</ScrollView>
